<Window x:Class="MilitaryShooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryShooter"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <Viewbox Stretch="Fill">
            <Canvas Name="GameCanvas" 
                    Background="Black" 
                    Focusable="True" 
                    Height="900" 
                    Width="1600" 
                    MouseMove="GameCanvas_MouseMoveHandler" 
                    MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown" 
                    MouseRightButtonDown="GameCanvas_MouseRightButtonDown"
                    KeyDown="GameCanvas_KeyDown" 
                    KeyUp="GameCanvas_KeyUp"
                    Loaded="GameCanvas_Loaded" >
            </Canvas>
        </Viewbox>
        <Grid Name="GameMenu"
              Focusable="True" 
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Opacity="0.6"
              Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Game Over"
                           FontSize="48"
                           TextAlignment="Center"
                           Foreground="White"
                           Margin="48" />
                <TextBlock x:Name="FinalScoreText"
                           Text="Score: "
                           FontSize="36"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="36" />
                <Button Content="Continue"
                        Foreground="White"
                        Background="DimGray"
                        Margin="0,20,0,0"
                        Padding="5"
                        FontSize="24"
                        MaxWidth="200"
                        Click="GameMenu_Continue_Button" />
                <Button Content="Restart"
                        Foreground="White"
                        Background="DimGray"
                        Margin="0,20,0,0"
                        Padding="5"
                        FontSize="24"
                        MaxWidth="200"
                        Click="GameMenu_Restart_Button" />
                <Button Content="Quit"
                        Foreground="White"
                        Background="DimGray"
                        Margin="0,20,0,0"
                        Padding="5"
                        FontSize="24"
                        MaxWidth="200"
                        Click="GameMenu_Quit_Button" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>